<%= render "shared/header2" %>

  <div class="signin_main">
    <div class="signin_message">
      <h2>新規登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name %>
        </div>
      
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・スマートフォンどちらでも可能です" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上半角英数字で入力してください" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>

